<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Memeory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#8A2387</item>
        <item name="colorPrimaryDark">#8A2387</item>
        <item name="colorAccent">#F27121</item>
        <item name="android:statusBarColor">#8A2387</item>
        <item name="android:windowBackground">@drawable/gradient_bg_1</item>
        <item name="android:navigationBarColor">#8A2387</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#E0FFFFFF</item>
        <item name="switchStyle">@style/CustomSwitchStyle</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.Memeory" parent="Base.Theme.Memeory" />
    
    <style name="SplashTheme" parent="Theme.Memeory">
        <item name="android:windowBackground">@drawable/splash_gradient_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransitionStyle</item>
    </style>
    
    <style name="WindowAnimationTransitionStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
    <style name="CardViewStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">#33FFFFFF</item>
        <item name="contentPadding">16dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>