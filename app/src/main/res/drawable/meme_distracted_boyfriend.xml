<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Девушка в красном (справа) -->
    <item android:left="170dp" android:right="30dp" android:top="80dp" android:bottom="100dp">
        <shape android:shape="oval">
            <solid android:color="#E91E63" />
        </shape>
    </item>
    
    <!-- Парень (середина) -->
    <item android:left="110dp" android:right="110dp" android:top="70dp" android:bottom="110dp">
        <shape android:shape="oval">
            <solid android:color="#3F51B5" />
        </shape>
    </item>
    
    <!-- Девушка (слева) -->
    <item android:left="30dp" android:right="170dp" android:top="80dp" android:bottom="100dp">
        <shape android:shape="oval">
            <solid android:color="#9C27B0" />
        </shape>
    </item>
    
    <!-- Перекрестная линия взгляда -->
    <item android:left="140dp" android:right="90dp" android:top="90dp" android:bottom="160dp">
        <rotate android:fromDegrees="-20">
            <shape android:shape="rectangle">
                <solid android:color="#FFC107" />
                <size android:width="60dp" android:height="3dp" />
            </shape>
        </rotate>
    </item>
    
    <!-- Линии дороги/земли -->
    <item android:left="0dp" android:right="0dp" android:top="180dp" android:bottom="70dp">
        <shape android:shape="rectangle">
            <solid android:color="#795548" />
        </shape>
    </item>
    
    <!-- Метка мема -->
    <item android:top="8dp" android:left="8dp" android:right="120dp" android:bottom="220dp">
        <shape android:shape="rectangle">
            <solid android:color="#424242" />
            <corners android:radius="4dp" />
            <padding android:left="4dp" android:right="4dp" android:top="2dp" android:bottom="2dp" />
        </shape>
    </item>

    <!-- Текст 1 (метка на девушке слева) -->
    <item android:left="30dp" android:right="170dp" android:top="50dp" android:bottom="180dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Текст 2 (метка на парне) -->
    <item android:left="100dp" android:right="100dp" android:top="40dp" android:bottom="190dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Текст 3 (метка на девушке справа) -->
    <item android:left="160dp" android:right="40dp" android:top="50dp" android:bottom="180dp">
        <shape android:shape="rectangle">
            <solid android:color="#EEEEEE" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list> 