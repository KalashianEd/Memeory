<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#AAFFFFFF">
    
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <item android:id="@android:id/background">
        <layer-list>
            <!-- Тень -->
            <item
                android:left="2dp"
                android:right="2dp"
                android:bottom="6dp">
                <shape android:shape="rectangle">
                    <corners android:radius="28dp" />
                    <solid android:color="#55000000" />
                </shape>
            </item>
            
            <!-- Основной фон -->
            <item
                android:bottom="4dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp">
                <shape android:shape="rectangle">
                    <corners android:radius="28dp" />
                    <gradient
                        android:angle="45"
                        android:startColor="#3F3B6C"
                        android:centerColor="#A367B1"
                        android:endColor="#624F82"
                        android:type="linear" />
                    <stroke
                        android:width="2dp"
                        android:color="#99FFFFFF" />
                    <padding
                        android:bottom="18dp"
                        android:left="30dp"
                        android:right="30dp"
                        android:top="18dp" />
                </shape>
            </item>
            
            <!-- Бликовый эффект сверху -->
            <item
                android:top="2dp"
                android:bottom="32dp"
                android:left="8dp"
                android:right="8dp">
                <shape android:shape="rectangle">
                    <corners
                        android:topLeftRadius="28dp"
                        android:topRightRadius="28dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp" />
                    <gradient
                        android:startColor="#66FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="270" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</ripple> 